<Window x:Class="kirillov_chat_api.ChatSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kirillov_chat_api"
        mc:Ignorable="d"
        Title="ChatSelection" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Height="60" 
                       Text="{Binding username, StringFormat={}Доброе время суток {0}}"/>
        
            <TextBlock Text="{Binding}"
                       Height="Auto"/>
        </StackPanel>
        
    </Grid>
</Window>
