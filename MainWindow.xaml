<Window x:Class="kirillov_chat_api.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kirillov_chat_api"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите логин"/>
            
            <TextBox Name="LoginTb"/>
            
            <TextBlock Text="Введите пароль"/>
            
            <PasswordBox Name="PasswordPb"/>

            <CheckBox Content="Запомнить меня" Name="RememberCb"/>

            <Button Content="Войти" Name="LoginBtn" Click="LoginBtn_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
